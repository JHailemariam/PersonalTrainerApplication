<AnchorPane stylesheets="@stylesheets/ChartsStyle.css" xmlns="http://javafx.com/javafx/9.0.4" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <TabPane fx:id="ClientInfoTab" tabClosingPolicy="UNAVAILABLE" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <tabs>
          <Tab fx:id="InfoTab" text="Client Info">
            <content>
              <AnchorPane fx:id="infoTab" minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <VBox layoutX="69.0" layoutY="86.0" prefHeight="593.0" prefWidth="536.0" spacing="20.0" AnchorPane.bottomAnchor="303.0" AnchorPane.topAnchor="0.0">
                           <children>
                              <Label fx:id="idLabel" text="ClientID: ">
                                 <font>
                                    <Font size="32.0" />
                                 </font>
                                 <padding>
                                    <Insets top="60.0" />
                                 </padding>
                              </Label>
                              <Label fx:id="nameLabel" text="Name: ">
                                 <font>
                                    <Font size="32.0" />
                                 </font>
                              </Label>
                              <Label fx:id="heightLabel" text="Height: ">
                                 <font>
                                    <Font size="32.0" />
                                 </font>
                              </Label>
                              <Label fx:id="strengthLabel" text="No. of Strengths:">
                                 <font>
                                    <Font size="32.0" />
                                 </font>
                              </Label>
                              <Label fx:id="enduranceLabel" text="No. of Endurances:">
                                 <font>
                                    <Font size="32.0" />
                                 </font>
                              </Label>
                              <Label fx:id="nutritionLabel" text="No. of Nutritions:">
                                 <font>
                                    <Font size="32.0" />
                                 </font>
                              </Label>
                              <Separator orientation="VERTICAL" prefHeight="100.0" visible="false" VBox.vgrow="ALWAYS" />
